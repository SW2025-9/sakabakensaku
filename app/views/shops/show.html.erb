<%# --- ページの全体を囲むコンテナを開始 --- %>
<div class="shop-show-container">

  <%# --- 上部：店舗情報エリア --- %>
  <div class="shop-basic-info">
    <p>
      <strong>店舗名：</strong>
      <%= @shop.name %>
    </p>

    <% if @shop.image.attached? %>
      <div class="image">
        <%= image_tag @shop.image, width: 300 %>
      </div>
    <% end %>

    <p>
      <strong>所在地：</strong>
      <%= @shop.city %>
    </p>

    <p>
      <strong>詳細：</strong>
      <%= @shop.detail %>
    </p>

    <%# --- いいねボタンエリア（一覧ページのデザインを適用） --- %>
    <div class="like-section" style="margin: 10px 0;">
      <% if current_user %>
        <%# --- ログイン中 --- %>
        <% if current_user.already_liked?(@shop) %>
          <%# 解除ボタン（クラス: like-btn liked） %>
          <%= button_to shop_likes_path(@shop), method: :delete, class: "like-btn liked" do %>
            いいね解除 <span class="thumbs-up">👍</span>
            <span class="like-count"><%= @shop.likes.count %></span>
          <% end %>
        <% else %>
          <%# 登録ボタン（クラス: like-btn） %>
          <%= button_to shop_likes_path(@shop), method: :post, class: "like-btn" do %>
            いいね <span class="thumbs-up">👍</span>
            <span class="like-count"><%= @shop.likes.count %></span>
          <% end %>
        <% end %>

      <% else %>
        <%# --- ログアウト中（機能なし・飾りボタン） --- %>
        <button type="button" class="like-btn">
          いいね <span class="thumbs-up">👍</span>
          <span class="like-count"><%= @shop.likes.count %></span>
        </button>
      <% end %>
    </div>
  </div>

  <%# --- 一覧に戻るリンク --- %>
  <div class="shop-detail-header">
    <div style="margin-top: 10px;">
      <%= link_to "一覧に戻る", root_path, class: "back-link" %>
    </div>
  </div>

  <hr class="divider">

  <%# --- レビュー投稿フォーム --- %>
  <div class="review-form-area">
    <h3>レビューを投稿する</h3>
    
    <% if session[:user_id] %>
      <%= form_with(model: [@shop, @review], local: true, class: "review-form") do |f| %>
        
        <div class="form-group">
          <label>コメント</label>
          <%= f.text_area :content, rows: 3, placeholder: "お店の感想を書きましょう", class: "review-textarea" %>
        </div>

        <%= f.submit "投稿する", class: "submit-review-btn" %>
      <% end %>
    <% else %>
      <p style="color: #666;">レビューを投稿するには <%= link_to "ログイン", login_path %> してください。</p>
    <% end %>
  </div>

  <hr class="divider">

  <%# --- レビュー一覧 --- %>
  <div class="reviews-list">
    <h3>みんなのレビュー (<%= @reviews.count %>件)</h3>

    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <div class="review-card">
          <div class="review-header">
            <span class="review-user"><%= review.user.uid %> さん</span>
            <span class="review-date"><%= review.created_at.strftime('%Y/%m/%d') %></span>
          </div>
          <div class="review-body">
            <%= simple_format(review.content) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>まだレビューはありません。</p>
    <% end %>
  </div>

</div> <%# --- ここでコンテナ終了 --- %>