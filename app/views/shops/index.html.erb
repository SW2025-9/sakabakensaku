  <%# --- ‰∏ÄË¶ßË°®Á§∫„Ç®„É™„Ç¢ --- %>
  <div class="shop-list">
    <% @shops.each do |shop| %>
      <div class="shop-card">
        <div class="shop-content">
          
          <%# Â∑¶ÂÅ¥ÔºöÁîªÂÉè %>
          <div class="shop-image">
            <% if shop.image.attached? %>
              <%= image_tag shop.image, class: "shop-img-tag" %>
            <% else %>
              <div class="no-image-text">No Image</div>
            <% end %>
          </div>

          <%# Âè≥ÂÅ¥ÔºöÊÉÖÂ†± %>
