<%= form_with model: @item, local: true, html: { multipart: true } do |f| %>

  <div>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :price, "価格" %><br>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :category, "カテゴリー" %><br>
    <%= f.text_field :category %>
  </div>

  <div>
    <%= f.label :detail, "説明" %><br>
    <%= f.text_area :detail %>
  </div>

  <div>
    <%= f.label :image, "画像アップロード" %><br>
    <%= f.file_field :image %>
  </div>

  <% if @item.persisted? && @item.image.attached? %>
    <p>現在の画像：</p>
    <%= image_tag url_for(@item.image), style: "max-width: 300px;" %>
  <% end %>

  <%= f.submit "保存" %>

<% end %>
