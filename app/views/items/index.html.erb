
<p><%= link_to '新規追加', new_item_path %></p>

<div style="width:920px; margin: 18px auto; font-family: sans-serif;">

  <!-- 検索領域 -->
  <div style="display:flex; gap:8px; align-items:center; margin-bottom:18px;">
    <input type="text" placeholder="" style="flex:1; height:28px; border:1px solid #bbb; padding:6px 8px;">
    <select style="width:80px; height:32px; border:1px solid #bbb;">
      <option>選択</option>
    </select>
    <button style="padding:6px 10px; border:1px solid #bbb; background:#fff;">検索</button>
  </div>

  <!-- 一覧 -->
  <div style="display:flex; flex-direction:column; gap:28px;">
    <% @items.each do |item| %>
      <%= render partial: 'item', locals: { item: item } %>
    <% end %>
  </div>
  
  <div style="margin-top: 10px;">
    <%# shops_path が店舗一覧ページへのURLです %>
    <%= link_to '店舗一覧に戻る', shops_path, style: "text-decoration: none; color: #333; font-weight: bold; border: 1px solid #ccc; padding: 5px 10px; background: #f9f9f9; border-radius: 4px;" %>
  </div>

</div>

